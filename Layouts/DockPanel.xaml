<Window x:Class="Layouts.DockPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layouts"
        mc:Ignorable="d"
        Title="DockPanel" Height="450" Width="800">
    <DockPanel>
        <Border Height="50" Background="Orange" DockPanel.Dock="Top">
            <TextBlock>Text1</TextBlock>
        </Border>
        <Border Width="100" Background="LightBlue" DockPanel.Dock="Left" >
            <TextBlock>Text1</TextBlock>
        </Border>
        <Border Height="50" Background="LightCoral" DockPanel.Dock="Top">
            <TextBlock>Text1</TextBlock>
        </Border>
        <Border Width="100" Background="Pink" DockPanel.Dock="Left" >
            <TextBlock>Text1</TextBlock>
        </Border>
        <Button>Rest of space</Button>
    </DockPanel>
</Window>
